@model Brand
@{
    ViewData["Title"] = "Eliminar una marca";
}
<form method="post" asp-controller="Brands" asp-action="Delete">
    <input type="hidden" asp-for="BrandId" />
    <h3>Eliminar una marca:</h3>
    <hr />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div>
        <label asp-for="BrandName" class="form-control"></label>
        <input asp-for="BrandName" disabled type="text" class="form-control" />
        <button class="btn btn-danger">
            Eliminar
        </button>
        <a asp-controller="Brands" asp-action="Index" class="btn btn-success">
            Volver a la lista
        </a>
    </div>
</form>
