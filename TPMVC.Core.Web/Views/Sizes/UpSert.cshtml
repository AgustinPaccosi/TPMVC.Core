
@model SizeEditVm
@{
    ViewData["Title"] = "New/Edit Size";
}
<form method="post" asp-action="UpSert" class="w-75">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="SizeId" />

    <div class="border p-3 bg-white">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-info pl-3">@(Model.SizeId == 0 ? "Nuevo Talle" : "Editar Talle")</h2>

        </div>
        <div class="form-group row py-2">
            <label asp-for="SizeNumber"></label>
            <input asp-for="SizeNumber" class="form-control" />
            <span asp-validation-for="SizeNumber" class="text-danger"></span>

        </div>
        @if (Model.SizeId == 0)
        {
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-floppy2-fill"></i>
                Crear
            </button>
        }
        else
        {
            <button type="submit" class="btn btn-warning">
                <i class="bi bi-pencil"></i>
                Editar

            </button>

        }
        <a asp-action="Index" class="btn btn-success btn-block">
            <i class="bi bi-backspace"></i>
            Volver a la Lista
        </a>


    </div>
</form>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
