@{
    ViewData["Title"] = "Privacy Policy";
}

<div class="container pt-4">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white text-center">
            <h2><i class="bi bi-shield-lock"></i> Privacy Policy</h2>
        </div>
        <div class="card-body">
            <p class="text-muted">
                Your privacy is important to us. This page details how we handle your personal data and security.
            </p>
            <h4>Data Collection</h4>
            <p>We collect personal information only when necessary for our services.</p>

            <h4>Security</h4>
            <p>All data is encrypted and securely stored. We do not share your information with third parties.</p>

            <h4>Your Rights</h4>
            <p>You have the right to access, update, or delete your personal data at any time.</p>

            <div class="text-center mt-3">
                <a class="btn btn-outline-primary" asp-action="Index" asp-controller="Home">
                    <i class="bi bi-arrow-left-circle"></i> Back to Home
                </a>
            </div>
        </div>
    </div>
</div>